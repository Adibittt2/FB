<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Switch">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Main Switch"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        android:background="@android:color/holo_red_light"
        tools:ignore="MissingConstraints" />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_aaloo_tikki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aaloo Tikki"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/colorPrimary"
        tools:ignore="MissingConstraints" />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_burger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Burger"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/colorPrimary"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_chowmein"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chowmein"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/colorPrimary"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_Frappuccino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Frappuccino"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/colorPrimary"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_Lassi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lassi"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/colorPrimary"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/swich_pizza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pizza"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/colorPrimary"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_paneer_burger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paneer Burger"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/colorPrimary"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_paneer_chilli_half"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paneer Chilli (Half)"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/colorPrimary"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_paneer_chilli_full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paneer Chilli (Full) "
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/colorPrimary"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_french_fries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="French Friess"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/colorPrimary"
        tools:ignore="MissingConstraints" />




</LinearLayout>

</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>